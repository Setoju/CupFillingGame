<Window x:Class="CupFilling.Level2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CupFilling"
        mc:Ignorable="d"
        Title="Level2Window" Height="1920" Width="1080" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="remainingWaterText" Text="{Binding Path=WaterAmount}"/>
            <ProgressBar Name="cupFilling" Width="200" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="100, 0" Minimum="0" Maximum="10"/>
            <TextBlock Name="progress" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="170, 0"/>
        </StackPanel>

        <Button Name="NextLevelButton" Content="Next Level" Height="50" Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="50" Click="NextLevelButton_Click" />
        <Canvas Name="SecondLevelCanvas" Height="1900" Width="700" Background="LightGray">
        </Canvas>

    </Grid>
</Window>
